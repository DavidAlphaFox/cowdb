%% -*- tab-width: 4;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

{erl_opts, [{platform_define, "R15", 'crypto_compat'},
            fail_on_warning,
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            warn_export_vars,
            warn_exported_vars,
            %%warn_untyped_record,
            % warn_missing_spec,
            % strict_validation,
            debug_info]}.

{deps, [
    %% snappy compression
    {snappy, ".*",
     {git, "https://github.com/fdmanana/snappy-erlang-nif.git",
      {branch, "master"}}},

    %% lz4 compression
    {lz4, ".*", {git, "git://github.com/krestenkrab/erlang-lz4.git",
                 {branch, "master"}}}
]}.

{pre_hooks, [{clean, "rm -fr ebin priv erl_crash.dump"}]}.
